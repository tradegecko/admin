<%= form_for @experiment, :html => { :class => "form-horizontal experiment" } do |f| %>

    <% if @experiment.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@experiment.errors.count, "error") %> prohibited this experiment from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @experiment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :key, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :key, :class => 'form-control' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :instrument_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :instrument_id, :class => 'form-control' %>
    </div>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            experiments_path, :class => 'btn btn-default' %>

<% end %>
